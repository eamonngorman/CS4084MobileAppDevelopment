<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_bg"
        android:elevation="30dp"
        android:orientation="vertical"
        android:padding="25dp"
        >


        <!--
        <ImageButton
            android:id="@+id/exitButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="transparent"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        -->

        <TextView
            android:id="@+id/title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Post"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/LocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="10dp"
            android:text="location"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_bg_white"
            android:padding="10dp"
            android:text="Message here"
            android:textSize="21sp" />

        <!-- Vote buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/upvoteBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/arrow_upward" />

            <TextView
                android:id="@+id/UpvoteCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0" />

            <ImageButton
                android:id="@+id/downvoteBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:src="@drawable/arrow_downward" />

            <TextView
                android:id="@+id/DownVoteCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0" />
        </LinearLayout>

        <Button
            android:id="@+id/CloseBtn"
            style="@style/buttonStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="10dp"

            android:text="Close"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Button
            android:id="@+id/view_comment_button"
            style="@style/buttonStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="View Comments"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>


</RelativeLayout>